/* create-room.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

.header {
  margin-top: 40rpx;
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
}

.title-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.main-title {
  font-size: 64rpx;
  font-weight: 700;
  color: white;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 4rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 400;
}

.game-types {
  padding: 0 40rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.game-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  min-height: 200rpx;
}

.game-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.game-card.selected {
  border-color: #667eea;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
  background: rgba(102, 126, 234, 0.05);
}

.game-icon {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.icon {
  font-size: 48rpx;
}

.game-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  text-align: center;
}

.game-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.game-desc {
  font-size: 24rpx;
  color: #718096;
}

.selected-indicator {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  background: #667eea;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
}

.actions {
  padding: 0 40rpx 60rpx;
  display: flex;
  justify-content: center;
}

.create-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 28rpx;
  font-size: 36rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.create-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.create-btn:disabled {
  background: #cbd5e0;
  color: #a0aec0;
  box-shadow: none;
}

.cancel-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 16rpx;
  padding: 28rpx 60rpx;
  font-size: 36rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  width: auto;
}

.cancel-btn:active {
  background: rgba(102, 126, 234, 0.1);
}

.decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: -1;
}

.floating-element {
  position: absolute;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  animation: float 8s ease-in-out infinite;
}

.element-1 {
  width: 100rpx;
  height: 100rpx;
  top: 30%;
  right: 8%;
  animation-delay: 0s;
}

.element-2 {
  width: 60rpx;
  height: 60rpx;
  bottom: 25%;
  left: 10%;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px);
    opacity: 0.6;
  }
  50% {
    transform: translateY(-30rpx);
    opacity: 0.8;
  }
}